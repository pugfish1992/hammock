<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/work_list_bs_fl_root"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:background="@color/android_view_background_light"
             app:behavior_peekHeight="@dimen/work_poster_height"
             app:layout_behavior="@string/bottom_sheet_behavior">
    <View
        android:id="@+id/work_list_bs_view_scrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:visibility="gone"/>
    <include layout="@layout/work_poster"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/work_list_bs_recycler_work_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>